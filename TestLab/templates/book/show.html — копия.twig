{% extends 'base.html.twig' %}

{% block title %}Book{% endblock %}

{% block body %}
    <div class="container p-2">
        <h1>Book</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ book.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ book.name }}</td>
                </tr>
                <tr>
                    <th>Author</th>
                    <td>{{ book.author }}</td>
                </tr>
                <tr>
                    <th>Image</th>
                    <td>{{ book.image }}</td>
                </tr>
                <tr>
                    <th>BookFile</th>
                    <td>{{ book.bookFile }}</td>
                </tr>
                <tr>
                    <th>DateRead</th>
                    <td>{{ book.dateRead ? book.dateRead|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
            </tbody>
        </table>

        <a  class="btn btn-success" href="{{ path('book_index') }}">Вернуться</a>

        <a class="btn btn-success" href="{{ path('book_edit', {'id': book.id}) }}">Редактировать</a>
    </div>

        {{ include('book/_delete_form.html.twig') }}
{% endblock %}
